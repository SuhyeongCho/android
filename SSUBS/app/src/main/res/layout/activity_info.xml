<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userActivity.Info">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="맛나분식"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_align"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/info_title"
        android:layout_marginTop="10dp"
        android:text="배치도입니다"
        android:gravity="center"/>

    <TextView
        android:id="@+id/info_phone"
        android:layout_width="193dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:text="010-3045-4070"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/info_align" />

    <TextView
        android:id="@+id/info_time"
        android:layout_width="192dp"
        android:layout_height="24dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="8dp"
        android:text="09:00 - 21:00"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/info_phone"
        app:layout_constraintTop_toBottomOf="@+id/info_align" />

    <TextView
        android:id="@+id/info_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info_phone"
        android:text="서울시 동작구 상도동 숭실대학교"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/info_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info_address"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

</android.support.constraint.ConstraintLayout>